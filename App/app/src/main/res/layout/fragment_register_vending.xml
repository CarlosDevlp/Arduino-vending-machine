<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.RegisterVendingFragment">

    <TextView
        android:id="@+id/txt_greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text="Bienvenido {name}, ¿Qué deseas comprar?" />

    <TextView
        android:id="@+id/txt_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="23sp"
        android:textColor="@color/text2"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text=" Saldo Actual S/.{credit}" />
    <!--Caramelo-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <CheckBox
            android:id="@+id/ch_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/item1"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/img_candy"/>

    </LinearLayout>
    <!--Toffee-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/ch_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/item2"
            />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/img_halls"/>

    </LinearLayout>
    <!--Chicle-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/ch_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/item3"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/img_chiclets_adams"/>

    </LinearLayout>


    <FrameLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/text2"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:text=" Total S/.0.00" />
        <Button
            android:id="@+id/btn_buy"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="end|end"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:text="Comprar"
            />
    </FrameLayout>

</LinearLayout>
